<Window x:Class="DineMetrics.TemperatureSensorEmulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DineMetrics.TemperatureSensorEmulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Temperature Sensor" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="20" Margin="0,20,0,0"/>

        <TextBlock Text="Current Temperature:" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="16"/>
        <TextBlock x:Name="TemperatureText" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="30" Margin="0,50,0,0" Foreground="DarkBlue"/>

        <Button Content="Start/Stop" Width="120" Height="30" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Margin="0,20,0,20" Click="StartStop_Click"/>
        
        <TextBlock x:Name="StatusText" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
    </Grid>
</Window>
